<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">adminhtml_banner_listing.adminhtml_banner_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new/" />
                <class>primary</class>
                <label>Add New Banner</label>
            </button>
        </buttons>
        <spinner>adminhtml_banner_columns</spinner>
        <deps>
            <dep>adminhtml_banner_listing.adminhtml_banner_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="adminhtml_banner_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>IdealCode_Banner::banner</aclResource>
        <dataProvider name="adminhtml_banner_listing_data_source" class="IdealCode\Banner\Ui\Component\DataProvider" />
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="adminhtml_banner_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>id</indexField>
            </settings>
        </selectionsColumn>
        <column name="id">
            <settings>
                <label>Banner ID</label>
            </settings>
        </column>
        <column name="active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="IdealCode\Banner\Model\Banner\Active" />
                <dataType>select</dataType>
                <label>Active</label>
            </settings>
        </column>
        <column name="link">
            <settings>
                <label>Link</label>
            </settings>
        </column>
        <column name="sort">
            <settings>
                <label>Sorting</label>
            </settings>
        </column>
    </columns>
</listing>
