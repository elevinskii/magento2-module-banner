<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">banner_item_form.banner_item_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="IdealCode\Banner\Ui\Component\Form\Buttons\Back"/>
            <button name="reset" class="IdealCode\Banner\Ui\Component\Form\Buttons\Reset"/>
            <button name="save" class="IdealCode\Banner\Ui\Component\Form\Buttons\Save"/>
            <button name="save_and_continue" class="IdealCode\Banner\Ui\Component\Form\Buttons\SaveAndContinue"/>
            <button name="delete" class="IdealCode\Banner\Ui\Component\Form\Buttons\Delete"/>
        </buttons>
        <namespace>banner_item_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>banner_item_form.banner_item_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="banner_item_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="IdealCode\Banner\Ui\Component\Form\Item\DataProvider"
                      name="banner_item_form_data_source" />
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">item</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">item</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Item</label>
                <dataScope>active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="sort" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">item</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Sorting</label>
                <dataScope>sort</dataScope>
            </settings>
        </field>
        <field name="img" formElement="file">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">item</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-file" xsi:type="boolean">true</rule>
                </validation>
                <label translate="true">Item image</label>
                <dataScope>img</dataScope>
            </settings>
        </field>
        <field name="link" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">item</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Item link</label>
                <dataScope>link</dataScope>
            </settings>
        </field>
        <field name="content" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">item</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <label translate="true">Item content</label>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
